<h1>Edit your Account</h1>
<%= form_for @user do |f|%>
  <%= f.label :username, "Username:" %><br>
  <%= f.text_field :username, placeholder: "Enter your username" %><br><br>
  <%= f.label :email, "Email:" %><br>
  <%= f.email_field :email, placeholder: "example@gmail.com" %><br><br>
  <%= f.label :password, "Password:" %><br>
  <%= f.password_field :password, placeholder: "password" %>
  <%= f.submit "Submit" %>
<% end %>
